# Lightweight Dockerfile for Maestro
FROM eclipse-temurin:19-jdk

# Install unzip
RUN apt-get update && apt-get install -y \
    unzip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy the pre-built maestro.zip file
COPY maestro-cli/build/distributions/maestro.zip .

# Unzip the file
RUN unzip maestro.zip && \
    rm maestro.zip

# Add maestro/bin to PATH
ENV PATH="/app/maestro/bin:${PATH}"

# Verify installation
RUN maestro --version

# Set the default command
CMD ["maestro", "--help"]